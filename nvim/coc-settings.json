{
  "languageserver": {
      "ocaml-lsp": {
          "command": "opam",
          "args": ["config", "exec", "--", "ocamllsp"],
          "filetypes": ["ocaml", "reason"]
      },
        "hdlChecker": {
            "command": "hdl_checker",
            "args": [
                "--lsp"
            ],
            "filetypes": [
                "vhdl", "verilog",
                "systemverilog"
            ]
        }
  },
  "java.home": "/opt/homebrew/opt/openjdk/libexec/openjdk.jdk/Contents/Home/",
  "java.import.maven.enabled": true,
  "clangd.fallbackFlags": ["--std=c++20", "-Wall", "-Wextra"]
}
